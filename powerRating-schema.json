  "IDMversion": "1.3 2025-08-10",
  "license": "(c) EMerge Alliance 2025, Licensed CC BY-NC-ND 4.0 -All Rights Reserved",
  "$comment": "This schema may be used for any component power rating",
  "schema": {
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "value": {"type": "number"},
          "units": {
            "type": "string",
            "enum": [
              "mW",
              "W",
              "kW"
            ]
          }
        },
        "required": [
          "value",
          "units"
        ]
      },
      {
        "type": "string",
        "pattern": "^(-?[0-9]+(.[0-9]+)?)(k|m)?W$"
      }
    ]
  }
}