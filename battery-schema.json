{
  "IDMversion": "1.3 2025-08-10",
  "license": "(c) EMerge Alliance 2025, Licensed CC BY-NC-ND 4.0 -All Rights Reserved",
  "description": "This schema may be used for any battery presenting two power terminals, with no associated electronics apart from a BMS",
  "schema": {
    "type": "object",
    "properties": {
      "SOA": {"$ref": "SOA-schema.json#/schema"},
      "energyCapacity": {"$ref": "energy-schema.json#/schema"},
      "dischargeRate": {
        "type": "string",
        "pattern": "^C[0-9]+(.[0-9]+)?$"
      },
      "typicalCycleLife": {"type": "number"},
      "chemistry": {"type": "string"},
      "BMScommunication": {
        "type": "object",
        "properties": {
          "protocol": {
            "anyOf": [
              {"type": "string"},
              {
                "type": "array",
                "items": {"type": "string"}
              }
            ]
          },
          "interface": {
            "anyOf": [
              {"type": "string"},
              {
                "type": "array",
                "items": {"type": "string"}
              }
            ]
          }
        }
      }
    },
    "required": [
      "energyCapacity",
      "chemistry"
    ]
  },
  "selectionTool": {
    "filter": [
      "chemistry",
      "nominalVoltage",
      "energyCapacity"
    ],
    "display": [
      "image",
      "chemistry",
      "nominalVoltage",
      "energyCapacity",
      "listPrice"
    ],
    "compare": [
      "chemistry",
      "nominalVoltage",
      "energyCapacity",
      "length",
      "width",
      "height",
      "weight",
      "listPrice"
    ]
  }
}