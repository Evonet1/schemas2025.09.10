{
  "IDMversion": "1.3 2025-08-10",
  "license": "(c) EMerge Alliance 2025, Licensed CC BY-NC-ND 4.0 -All Rights Reserved",
  "schema": {
    "type": "object",
    "properties": {
      "length": { "$ref": "dimensions-schema.json#/schema" },
      "width": { "$ref": "dimensions-schema.json#/schema" },
      "depth": { "$ref": "dimensions-schema.json#/schema" },
      "height": { "$ref": "dimensions-schema.json#/schema" },
      "diameter": { "$ref": "dimensions-schema.json#/schema" },
      "units": {
        "type": "string",
        "enum": [ "in", "ft", "yds", "mi", "mm", "cm", "m", "km" ]
      },
      "weight": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "value": { "type": "number" },
              "units": {
                "type": "string",
                "enum": [ "g", "kg", "oz", "lbs" ]
              }
            },
            "required": [ "value" ]
          },
          {
            "type": "string",
            "pattern": "^([0-9]+(.[0-9]+)?)((m|k)?g|oz|lbs)$"
          }

        ]
      },
      "mountingType": {
        "oneOf": [
          { "$ref": "mountingStyle-schema.json#/schema" },
          {
            "type": "array",
            "items": { "$ref": "mountingStyle-schema.json#/schema" }
          },
          {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "style": { "$ref": "mountingStyle-schema.json#/schema" },
                "orderCode": { "type": "string" }
              }
            }
          }
        ]
      }
    }
  },

  "selectionTool": {
    "filter": false,
    "display": false
  }
}

