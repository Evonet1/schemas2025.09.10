  "$comment": "This schema may be used for battery energy capacity",
  "schema": {
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "value": {"type": "number"},
          "units": {
            "type": "string",
            "enum": [
              "Ah",
              "Wh",
              "kWh"
            ]
          }
        },
        "required": [
          "value",
          "units"
        ],
        "additionalProperties": false
      },
      {
        "type": "string",
        "pattern": "^([0-9]+(.[0-9]+)?)(Ah|Wh|kWh)$"
      }
    ]
  }
}